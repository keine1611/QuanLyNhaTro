
@model IEnumerable<QuanLyNhaTro.NhaTro>
@{
	ViewBag.Title = "Nhà Trọ Giá Rẻ";
	Layout = "~/Views/Shared/_LayoutAdmin2.cshtml";
}

<div class="col-md-offset-4 col-md-4">
	<button class="btn btn-primary btn-icon-text btn-rounded">
		@Html.ActionLink("Thêm Nhà Trọ", "ThemNhaTro", "", new { @style = "color:#fff" })
	</button>
</div>

<hr />
<table class="col-12">
	<tr class="row">
		<th class="col-2">
			Hình Ảnh Nhà Trọ
		</th>

		<th class="col-2">
			Tên Nhà Trọ
		</th>

		<th class="col-2">
			Địa Chỉ
		</th>

		<th class="col-3">
			Email
		</th>

		<th class="col-1">
			Số Phòng
		</th>

		<th class="col-2">
			Điện Thoại
		</th>

	</tr>


	@foreach (var item in Model)
	{
		<tr class="row">
			<td class="col-2">
				<div class="row">
					<img src="~/Content/Images/@item.HinhAnhs.FirstOrDefault().url_HA" alt="Anh bi loi" style="width:150px;height:150px;margin-left:0px" />
				</div>
				<div class="row" style="display:block;margin:0 auto; padding:0">
					<a href="CapNhatNhaTro?id=@item.id_NT"><img src="~/Content/Images/Icons/edit.png" style="width:40px;height:40px;border-radius:10px;" /></a>
					<a href="XoaNhaTro?id=@item.id_NT"><img src="~/Content/Images/Icons/delete.png" style="width:40px;height:40px;border-radius:10px;" /></a>
					<a href="DanhSachPhongTro?id=@item.id_NT"><img src="~/Content/Images/Icons/details.png" style="width:40px;height:40px;border-radius:10px;" /></a>
				</div>
			</td>

			<td class="col-2">
				@Html.DisplayFor(modelItem => item.ten_NT)
			</td>

			<td class="col-2">
				@Html.DisplayFor(modelItem => item.diachi_NT)
			</td>

			<td class="col-3">
				@Html.DisplayFor(modelItem => item.email_NT)
			</td>

			<td class="col-1">
				@Html.DisplayFor(modelItem => item.sophong_NT)
			</td>

			<td class="col-2">
				@Html.DisplayFor(modelItem => item.sodt_NT)
			</td>
		</tr>

	}
</table>





