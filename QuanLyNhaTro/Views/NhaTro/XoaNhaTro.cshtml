@model QuanLyNhaTro.NhaTro

@{
    ViewBag.Title = "Xoá nhà trọ";
    Layout = "~/Views/Shared/_LayoutAdmin2.cshtml";
}

<div class="col-md-8 col-md-offset-0 text-primary" style="margin:0 auto">
    <h2>Xoá Nhà Trọ</h2>
</div>
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Tên Nhà Trọ
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.ten_NT, new { htmlAttributes = new { @class = "form-control" , @readonly="readonly"} })
                @Html.ValidationMessageFor(model => model.ten_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                CCCD
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.CCCD_NT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.CCCD_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Địa Chỉ
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.diachi_NT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.diachi_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Email
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.email_NT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.email_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Số Phòng
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.sophong_NT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.sophong_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Số Điện Thoại
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.sodt_NT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.sodt_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Ghi Chú
            </label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.ghichu_NT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ghichu_NT, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-primary" style="font-size:20px">
                Hình Ảnh
            </label>
            <div class="col-sm-9">
                <img src="~/Content/Images/@Model.HinhAnhs.FirstOrDefault().url_HA" width="100" height="100" />
            </div>
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-8 col-md-offset-4">
            <div class="form-group row">
                <div class="col-md-6" style="margin:0 auto">
                    <button class="btn btn-primary btn-icon-text btn-rounded">
                        @Html.ActionLink("Xem danh sách Nhà Trọ", "DanhSachNhaTro", "", new { @style = "color:#fff" })
                    </button>
                    <input type="submit" value="Xoá Nhà Trọ" class="btn btn-primary btn-icon-text btn-rounded" />
                </div>
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")